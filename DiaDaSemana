DiaDaSemana.cpp

#include <stdio.h>
#include <stdlib.h>

int main() {

	int opcao;

	printf("Digite um numero entre 1 e 7: ");
	scanf_s("%d", &opcao);

	switch (opcao)
	{
		case 1:
			printf("Domingo\n\n");
			break;
		case 2:
			printf("Segunda\n\n");
			break;
		case 3:
			printf("Terca\n\n");
			break;
		case 4:
			printf("Quarta\n\n");
			break;
		case 5:
			printf("Quinta\n\n");
			break;
		case 6:
			printf("Sexta\n\n");
			break;
		case 7:
			printf("Sabado\n\n");
			break;
		default:
			printf("Nao existe\n\n");
			break;
	}

	system("pause");
	return 0;
